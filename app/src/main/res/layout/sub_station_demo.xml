<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/substation_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <View
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginEnd="5dp"
                android:background="#C0C2C3" />

            <View
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="#C0C2C3"

                />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#C0C2C3" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#F4D9D9"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/substation_cardView"
        app:layout_constraintTop_toBottomOf="@+id/substation_cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>